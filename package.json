{
  "name": "@tamtamchik/apple-iap-tools",
  "version": "1.4.0-pre.6",
  "description": "Apple IAP tools for Node.js. Verify receipts and handle Apple Server Notifications.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./src/index.ts",
  "author": "Yuri Tkachenko <yuri.tam.tkachenko@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/tamtamchik/apple-iap-tools#readme",
  "bugs": {
    "url": "https://github.com/tamtamchik/apple-iap-tools/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/tamtamchik/apple-iap-tools.git"
  },
  "directories": {
    "doc": "docs"
  },
  "keywords": [
    "Apple Server Notifications",
    "Apple verifyReceipt",
    "Apple IAP"
  ],
  "devDependencies": {
    "@types/node": "20.4.9",
    "@typescript-eslint/eslint-plugin": "6.3.0",
    "@typescript-eslint/parser": "6.3.0",
    "eslint": "8.46.0",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "tsup": "7.2.0",
    "typedoc": "0.24.8",
    "typescript": "5.1.6"
  },
  "dependencies": {
    "jose": "4.14.4"
  },
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./src/index.ts"
    }
  },
  "engines": {
    "node": ">=17.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --clean",
    "dev": "npm run build -- --watch src",
    "lint": "eslint src --fix",
    "docs": "typedoc",
    "docs:serve": "npx http-server docs",
    "prepublishOnly": "npm run build && npm run docs"
  }
}
